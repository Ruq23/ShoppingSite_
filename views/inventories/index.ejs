<% layout('layouts/boilerplate') %> 

    <h1>Hello, Howdy?</h1>
        <ul>
            <% for (let inventory of iventories) {%>
                <div class="card mb-3">
                    <div class="row">
                        <div class="col-md-4">
                         <img class="img-fluid" src="" alt="">
                        </div> 
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title"><%= inventory.category %></h5>
                                <p class="card-text"><%= inventory.brand %> </p>
                                <p class="card-text">
                                  <small class="text-muted"><%= inventory.name %></small>  
                                </p>
                                <a class="btn btn-primary" href="/list/<%=inventory._id%>">View <%= inventory.name %> </a>
                                 
                            </div>
                        </div>
                    </div>
                </div>
                <% } %> 
        </ul>

        <form action="/logout" method="POST">
            <button>Sign Out</button>
        </form>
